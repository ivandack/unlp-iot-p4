    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch CoAP Client",
            "program": "${workspaceFolder}/src/coap-cli.js",
            "args": ["--verbose", "get", "localhost"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceFolder}/test"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch data loader",
            "program": "${workspaceFolder}/src/data-loader.js",
            "args": ["--verbose", "--mote", "::1"]
        }
    ]
}